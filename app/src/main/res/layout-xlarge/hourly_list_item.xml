<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                tools:background="@drawable/bg_gradient">


    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="39dp"
        android:text="TextView"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        tools:text="12 PM"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeLabel"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/timeLabel"
        android:layout_toRightOf="@id/timeLabel"
        app:srcCompat="@drawable/partly_cloudy"/>

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        tools:text="100"
        android:textColor="#ffffffff"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/summaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iconImageView"
        android:layout_toLeftOf="@id/temperatureLabel"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toStartOf="@+id/temperatureLabel"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="partly cloudy"
        android:textColor="#ffffffff"/>
</RelativeLayout>